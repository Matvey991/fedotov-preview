{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "bundler",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    }
}
